script (
        import { createSignal, effect } from '@lib';

        const [todos, setTodos] = createSignal([]);
const [content, setContent] = createSignal("");
        console.log("This is from todo app's script section");
        effect(() => {
                console.log(todos())
          console.log(content())
        })

        function addTodos(e) {
                e.preventDefault();
          console.log("Adding")
                setTodos(todos => [content(), ...todos]);
                e.target.reset();
        }

)

