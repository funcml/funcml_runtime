          value=[() => content()] oninput=[e => setContent(e.target.value)]
          class="p-1 border-2  border-black rounded-l-md" (),
                button onclick=[addTodos] class="p-1 border-2 border-l-0 border-black rounded-r-md" $ "Add todo"
